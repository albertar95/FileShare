<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>File Share - @ViewData["Title"]</title>
    <!-- BOOTSTRAP STYLES-->
    <link href="@Url.Content("~/Content/assets/css/bootstrap.css")" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="@Url.Content("~/Content/assets/css/font-awesome.css")" rel="stylesheet" />
    <!-- CUSTOM STYLES-->
    <link href="@Url.Content("~/Content/assets/css/custom.css")" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href='@Url.Content("~/Content/assets/fonts/googlefonts.css")' rel='stylesheet' type='text/css' />
</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-default navbar-cls-top " role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">File Share</a>
            </div>
            <div style="color: white;
padding: 15px 50px 5px 50px;
float: right;
font-size: 16px;">Username : Anonymous &nbsp;<a href="#" class="btn btn-danger square-btn-adjust">Logout</a></div>
        </nav>
        <!-- /. NAV TOP  -->
        <nav class="navbar-default navbar-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="main-menu">
                    <li>
                        <a href="/"><i class="fa fa-dashboard fa-3x"></i> Dashboard</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Folders","Home")"><i class="fa fa-folder fa-3x"></i> Folders</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Users","Home")"><i class="fa fa-user fa-3x"></i> Users</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Profile","Home")"><i class="fa fa-user-md fa-3x"></i> Profile</a>
                    </li>
                </ul>
            </div>

        </nav>
        <!-- /. NAV SIDE  -->
        <div id="page-wrapper">
            <div id="page-inner">
                @RenderBody()
            </div>
            <!-- /. PAGE INNER  -->
        </div>
        <!-- /. PAGE WRAPPER  -->
    </div>
    <!-- /. WRAPPER  -->
    <!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
    <!-- JQUERY SCRIPTS -->
    <script src="@Url.Content("~/Content/assets/js/jquery-1.10.2.js")"></script>
    <!-- BOOTSTRAP SCRIPTS -->
    <script src="@Url.Content("~/Content/assets/js/bootstrap.min.js")"></script>
    <!-- METISMENU SCRIPTS -->
    <script src="@Url.Content("~/Content/assets/js/jquery.metisMenu.js")"></script>
    <!-- CUSTOM SCRIPTS -->
    <script src="@Url.Content("~/Content/assets/js/custom.js")"></script>
    @RenderSection("Scripts",false)

</body>
</html>
