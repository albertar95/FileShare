@model Tuple<int,string>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Http Error</title>
    <link href="@Url.Content("~/Content/assets/css/ErrorHandle.css")" rel="stylesheet" />
    <link rel="icon" type="image/x-icon" href="@Url.Content("~/Content/assets/img/favicon.ico")">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8">
                <div class="col-lg-12 text-404">
                    <b>@Model.Item1</b>
                </div>
                <div class="col-lg-12 text">
                    @switch (Model.Item1)
                    {
                        case 400:
                            <b> BAD REQUEST </b>
                            break;
                        case 401:
                            <b> UNAUTHORIZED </b>
                            break;
                        case 403:
                            <b> FORBIDDEN </b>
                            break;
                        case 404:
                            <b> NOT FOUND </b>
                            break;
                        case 405:
                            <b> METHOD NOT ALLOWED </b>
                            break;
                        case 500:
                            <b> INTERNAL SERVER ERROR </b>
                            break;
                        case 502:
                            <b> BAD GATEWAY </b>
                            break;
                        case 503:
                            <b> SERVICE UNABAILABLE </b>
                            break;
                        case 0:
                            <b> ERROR HANDLING PAGE CALLED WITHOUT CODE </b>
                            break;
                        default:
                            <b> HTTP ERROR OCCURED </b>
                            break;
                    }
                </div>
                @if (!string.IsNullOrWhiteSpace(Model.Item2))
                {
                    <div class="col-lg-12 text" style="margin:25px;">
                        <p>Message : @Model.Item2</p>
                    </div>
                }
                <div class="col-lg-12 text-btn">
                    <a href="/" class="btn btn-outline-primary">BACK TO HOME</a>
                </div>
            </div>
                <div class="col-lg-2"></div>
            </div>
    </div>
</body>
</html>
